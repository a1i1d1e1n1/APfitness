<div class="pagination pagination-minimal"  ng-if="1 < pages.length">

    <ul>
        <li class="previous ng-scope" ng-if="directionLinks" ng-class="{ disabled : pagination.current == 1 }">
            <a href="" class="fui-arrow-left ng-binding "  ng-click="setCurrent(pagination.current - 1)"></a>
        </li>

        <li ng-repeat="pageNumber in pages track by $index" ng-class="{ active : pagination.current == pageNumber, disabled : pageNumber == '...' }">
            <a href="" ng-click="setCurrent(pageNumber)">{{ pageNumber }}</a>
        </li>
        <li class="next ng-scope" ng-if="directionLinks" ng-class="{ disabled : pagination.current == pagination.last }">
        <a href="" class="fui-arrow-right  ng-binding "  ng-click="setCurrent(pagination.current + 1)" ></a>
        </li>

    </ul>


</div>

