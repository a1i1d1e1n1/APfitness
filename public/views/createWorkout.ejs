<div class="col-sm-3 col-md-3 col-lg-3" style="padding:0">

    <nav class="left-menu-create">

        <input type="text" placeholder="Workout Name..." ng-model="workout.name" class="form-control flat input-hg"
               style="background-color: #2c3e50; color: white"/>

        <hr style="border-top-color: white">

        <div style="overflow-y: scroll; height:70vh;">

            <div ng-repeat="exercise in workout.exercises" ng-init="p = this" ng-drop="true"
                 ng-drop-success="onDropComplete($index, $data,$event)" class="ng-scope">

                <div ng-drag="true" ng-drag-data="exercise" ng-class="exercise.name" class="ng-binding one"
                     draggable="false">

                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <button class="btn btn-warning btn-xs pull-right" ng-click="removeExercise($index)"><i
                                        class="fui-cross"></i></button>
                            <h4 class="panel-title">{{exercise.name}}</h4>
                        </div>

                        <div class="panel-body" style="font-size: 14px">

                            <div ng-repeat="set in workout.exercises[$index].sets">
                                <div class="col-sm-4">
                                    reps: {{set.reps}}
                                </div>
                                <div class="col-sm-5">
                                    weight: {{set.weight}}
                                </div>
                                <div class="col-sm-3">
                                    <div class="btn btn-xs btn-danger" ng-click="removeSet(p.$index,$index)"><i
                                                class="fui-cross"></i></div>
                                </div>
                            </div>

                            <div>
                                <div class="col-sm-12">
                                    <div class="btn btn-xs btn-info" ng-click="addSet(p.$index)"
                                         style="width: 100%">
                                        <i class="fui-plus"> </i>ADD SET
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-block btn-primary" ng-click="saveWorkout(workout,workoutName)" style="padding-top: 10px">
            Save Workout
        </button>
    </nav>

</div>
<div class="col-sm-9 col-md-9 col-lg-9" style="padding-left: 0">
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="col-xs-4">
                <div class="form-group">
                    <div class="input-group input-group-rounded">
                  <span class="input-group-btn">
                    <button class="btn" type="submit"><span class="fui-search"></span></button>
                  </span>
                        <input ng-model="q" id="search" class="form-control" placeholder="Search">
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <select class="form-control select select-primary select-block mbl">
                    <optgroup label="Body Part">
                        <option value="0">All</option>
                        <option value="1">Biceps</option>
                        <option value="2">Back</option>
                        <option value="3">Chest</option>
                        <option value="4">Triceps</option>
                    </optgroup>
                </select>

            </div>

        </div>
        <hr>
        <div class="col-sm-12">
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3" dir-paginate="ex in exercises | filter:q | itemsPerPage: pageSize"
                 current-page="currentPage">
                <div class="panel panel-primary">
                    <div class="panel-heading">

                        <h5 style="font-size: 14px;text-align: center" class="panel-title">{{ex.name}}</h5>

                    </div>
                    <div class="panel-body" style="margin: 0;padding: 0">

                        <div class="btn-group " style="width: 50%">
                            <button type="button" class="btn btn-sm btn-primary " ng-click="addExercise(ex)"
                                    style="width:50%">
                                <i class="fui-plus-circle"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-primary"
                                    style="width:50%;position:absolute;border-top-right-radius: 0;">
                                <i class="fui-info-circle"></i>
                            </button>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-sm-12">
                <div ng-controller="OtherController" class="other-controller">
                    <div class="text-center">
                        <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"
                                                 template-url="/views/dirPagination.tpl.ejs"></dir-pagination-controls>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>
