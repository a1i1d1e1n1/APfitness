<div class="col-sm-2 col-md-3 col-lg-3" style="padding-right: 0">
    <div class="container-fluid">

        <h4 style="margin-top: 0px;"> <u>Workout Exercises</u></h4>
        <div style="overflow-y: scroll; height:70vh;">
            <div ng-repeat="exercise in workout" ng-init="sectionIndex = $index" ng-drop="true" ng-drop-success="onDropComplete($index, $data,$event)" class="ng-scope">
                <div ng-drag="true" ng-drag-data="exercise" ng-class="exercise.name" class="ng-binding one" draggable="false">
                    <div class="panel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">{{exercise.name}}</h4>

                            </div>

                        <div class="panel-body" style="font-size: 14px">

                            <div ng-repeat="set in workout[$index].sets">
                                <div class="col-sm-4" >
                                    reps: {{set.reps}}
                                </div>
                                <div class="col-sm-5">
                                    weight: {{set.weight}}
                                </div>
                                <div class="col-sm-3">
                                    <div class="btn btn-xs btn-danger" ng-click="removeSet(sectionIndex,$index)"><i class="fui-cross"></i> </div>
                                </div>
                            </div>
                            <div>
                                <div class="col-sm-12">
                                    <div class="btn btn-xs btn-info" ng-click="addSet(sectionIndex)" style="width: 100%"><i class="fui-plus"> ADD SET</i> </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-10 col-md-9 col-lg-9" style="padding-left: 0">
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="col-xs-4">
                <div class="form-group">
                    <div class="input-group input-group-rounded">
                  <span class="input-group-btn">
                    <button class="btn" type="submit"><span class="fui-search"></span></button>
                  </span>
                        <input ng-model="q" id="search" class="form-control" placeholder="Search">
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <select class="form-control select select-primary select-block mbl"  >
                    <optgroup label="Body Part">
                        <option value="0">All</option>
                        <option value="1">Biceps</option>
                        <option value="2">Back</option>
                        <option value="3">Chest</option>
                        <option value="4">Triceps</option>
                    </optgroup>
                </select>

            </div>
            <div class="col-xs-4">

            </div>
        </div>
        <hr>
        <div class="col-sm-12">
            <div class="col-sm-4" dir-paginate="ex in exercises | filter:q | itemsPerPage: pageSize" current-page="currentPage">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5 style="font-size: 14px;text-align: center" class="panel-title">{{ex.name}}</h5>

                        <div style="text-align: center">
                            <span style="font-size: 12px" class="panel-title">Rating: 4</span>
                            <span style="font-size: 12px" class="panel-title">Comments: 4</span>
                        </div>
                        <div class="text-center">
                            <div class="btn-group" style="width: 100%">
                                <button class="btn-primary btn btn-embossed btn-xs" ng-click="addExercise(ex)">Add</button>
                                <button class="btn-primary btn-embossed btn btn-xs" ng-click="addExercise(ex)"><i class="fui-info-circle"></i> </button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-sm-12">
                <div ng-controller="OtherController" class="other-controller">
                    <div class="text-center">
                        <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/views/dirPagination.tpl.ejs"></dir-pagination-controls>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>
