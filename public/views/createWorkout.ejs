<br>
<div class="col-sm-2 col-md-3 col-lg-3" >
    <div class="container-fluid">

        <h4 style="margin-top: 0px;"> <u>Workout Exercises</u></h4>
        <div ng-repeat="exercise in workout" ng-init="sectionIndex = $index">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">{{exercise.name}}</h4>

                    </div>
                    <div class="panel-body" style="font-size: 14px">
                        <div>
                            <div class="col-sm-4" >
                                reps: 8
                            </div>
                            <div class="col-sm-6">
                                weight: 60
                            </div>
                            <div class="col-sm-2">
                                <div class="btn btn-xs btn-info" ng-click="addSet(sectionIndex)"><i class="fui-plus"></i> </div>
                            </div>
                        </div>
                        <div ng-repeat="set in workout[$index].sets">
                            <div class="col-sm-4" >
                                reps: {{set.reps}}
                            </div>
                            <div class="col-sm-6">
                                weight: {{set.weight}}
                            </div>
                            <div class="col-sm-2">
                                <div class="btn btn-xs btn-info" ng-click="addSet(sectionIndex)"><i class="fui-plus"></i> </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<div class="col-sm-10 col-md-9 col-lg-9" >
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="col-xs-4">
                <div class="form-group">
                    <div class="input-group input-group-rounded">
                  <span class="input-group-btn">
                    <button class="btn" type="submit"><span class="fui-search"></span></button>
                  </span>
                        <input ng-model="q" id="search" class="form-control" placeholder="Search">
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <select class="form-control select select-primary select-block mbl"  >
                    <optgroup label="Body Part">
                        <option value="0">All</option>
                        <option value="1">Biceps</option>
                        <option value="2">Back</option>
                        <option value="3">Chest</option>
                        <option value="4">Triceps</option>
                    </optgroup>
                </select>

            </div>
            <div class="col-xs-4">

            </div>
        </div>
        <hr>
        <div class="col-sm-12">
            <div class="col-sm-4" dir-paginate="ex in exercises | filter:q | itemsPerPage: pageSize" current-page="currentPage">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">{{ex.name}}</h4>
                        <button class="btn-info btn btn-xs" ng-click="addExercise(ex)">ADD</button>

                    </div>

                </div>

            </div>
        </div>
        <div class="col-sm-12">
            <br>
            <h2 ng-show="exercises.length == 0" style="text-align: center">No Items Found !!!</h2>
        </div>
        <div class="col-sm-12">
            <div ng-controller="OtherController" class="other-controller">
                <div class="text-center">
                    <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/views/dirPagination.tpl.ejs"></dir-pagination-controls>
                </div>
            </div>
        </div>
    </div>

</div>
