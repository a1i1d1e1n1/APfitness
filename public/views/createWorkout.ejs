<div class="row row-offcanvas row-offcanvas-left">
    <div class="col-xs-3 col-sm-3  sidebar-offcanvas" id="sidebar">
        <nav class="left-menu-create">

            <input type="text" placeholder="Workout Name..." ng-model="workout.name" class="form-control flat input-hg"
                   style="background-color: #2c3e50; color: white"/>

            <hr style="border-top-color: white">

            <div style="overflow-y: scroll; height:70%;">

                <div ng-repeat="exercise in workout.exercises" ng-init="p = this" ng-drop="true"
                     ng-drop-success="onDropComplete($index, $data,$event)" class="ng-scope">

                    <div ng-drag="true" ng-drag-data="exercise" ng-class="exercise.name" class="ng-binding one"
                         draggable="false">

                        <div class="col-sm-12"
                             style="background-color: #16a085;color: white;padding: 5px;text-align: center"
                             ng-model="collapsed" ng-dblclick="collapsed=!collapsed">
                            {{exercise.name}}
                        </div>
                        <div ng-show="workout.exercises[$index].sets.length > 0">
                            <div class="col-sm-12" style="background-color: #3498db;color: white;padding: 0"
                                 ng-hide="collapsed">
                                <div class="col-sm-2 center-t">
                                    <p style="font-size: 12px">Set:</p>
                                </div>
                                <div class="col-sm-8 center-t">
                                    <p style="font-size: 12px">Reps:</p>
                                </div>

                            </div>
                        </div>
                        <div ng-repeat="set in workout.exercises[$index].sets" ng-hide="collapsed">

                            <div class="col-sm-12"
                                 style="background-color: #3498db;color: white;padding: 0;height:25px">

                                <div class="col-sm-2 center-t" style="height: inherit">
                                    <p style="font-size: 12px">{{$index+1}}:</p>
                                </div>
                                <div class="col-sm-8 center-t" style="height: inherit">
                                    <p style="font-size: 12px">{{set.reps}}</p>
                                </div>
                                <div class="col-sm-2" style="height: inherit">

                                    <img class="pull-left img-circle" src="img/trash.svg" height="25px"
                                         ng-click="removeSet(p.$index,$index)">

                                </div>
                            </div>

                        </div>
                        <div class="btn btn-sm btn-default" ng-click="addSet(p.$index)"
                             style="width: 100%;border-top-right-radius: 0;border-top-left-radius: 0;z-index: 1400"
                             ng-hide="collapsed">
                            <i class="fui-plus"> </i>ADD SET
                        </div>

                        <div ng-hide="workout.exercises.length == $index+1" style="text-align: center;padding:0">

                            <i class="fui-location" style="color: white"></i>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-block btn-info" ng-click="saveWorkout(workout,workoutName)"
                    style="padding-top: 10px;">
                Save Workout
            </button>
        </nav>
    </div>


    <!--The exercise load here!-->
    <div class="col-sm-12 col-md-9 col-lg-9" style="padding-left: 0;padding-top: 15px">
        <div class="container-fluid">
            <div class="col-sm-12">

                <div class="col-xs-6">
                    <p class="pull-right visible-xs visible-sm pull-left">
                        <button type="button" class="btn btn-primary btn-xs" ng-click="showCanvas()">Toggle nav</button>
                    </p>

                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <div class="input-group input-group-rounded">
                          <span class="input-group-btn">
                            <button class="btn" type="submit"><span class="fui-search"></span></button>
                          </span>
                            <input ng-model="q" id="search" class="form-control" placeholder="Search">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-2"
                     dir-paginate="ex in exercises | filter:q | itemsPerPage: pageSize" current-page="currentPage"
                     style="padding: 10px">
                    <div class="panel panel-success" style="margin:0;padding:0;border: 0">

                        <div class="panel-body" style="padding: 0;background-color: #16a085;color: white">
                            <div class="col-sm-12" style="padding: 0">

                                <p style="text-align: left;font-size: 14px;margin-top: 5px;margin-bottom: 0px;text-align: center;font-weight: bolder">
                                    {{ex.name}}</p>

                            </div>
                            <div class="col-sm-12" style="padding: 0">
                                <youtube-embed id="{{ex.exerciseURL}}"></youtube-embed>
                            </div>


                        </div>

                    </div>
                    <div class="col-lg-6" style="padding: 0">
                        <div class="exercise-label">Rating: 0</div>
                    </div>
                    <div class="col-lg-6" style="padding: 0">
                        <div class="exercise-label">Comments: 0</div>
                    </div>
                    <div class="col-lg-12" style=";padding: 0">
                        <div class="btn-group" style="width: 100%">
                            <button class="btn btn-default btn-sm"
                                    style="width: 50%;border-top-left-radius: 0;border-top-right-radius: 0"
                                    ng-click="addExercise(ex)">
                                <i class="fui-plus-circle"></i>
                            </button>
                            <button class="btn btn-default btn-sm"
                                    style="width: 50%;border-top-left-radius: 0;border-top-right-radius: 0">
                                <i class="fui-info-circle"></i>
                            </button>
                        </div>
                    </div>

                </div>
                <div class="col-sm-12">
                    <div ng-controller="OtherController" class="other-controller">
                        <div class="text-center">
                            <dir-pagination-controls boundary-links="true"
                                                     on-page-change="pageChangeHandler(newPageNumber)"
                                                     template-url="/views/dirPagination.tpl.ejs"></dir-pagination-controls>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>