<div class="container">
    <br>
    <div class="col-sm-12">
        <div class="col-sm-1 col-lg-2"></div>
        <div class="col-sm-10 col-lg-8">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <h4>Log In</h4>
                    <hr>
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="col-sm-12 col-lg-2 ">
                                <label for="inputUsername" class="control-label pull-left">Username:</label>
                            </div>

                            <div class="col-sm-12 col-lg-10">
                                <input type="text" class="form-control" id="inputUsername" placeholder="Username" ng-model="login.email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 col-lg-2 ">
                                <label for="inputPassword" class="control-label">Password:</label>
                            </div>
                            <div class="col-sm-12 col-lg-10">
                                <input type="password" class="form-control" id="inputPassword" placeholder="Password" ng-model="login.password">
                            </div>
                        </div>
                    </form>
                    <hr>
                    <button class="btn btn-primary btn-lg pull-right" ng-click="signIn(login.email, login.password)">Log In</button>
                </div>
            </div>
            <a class="pull-right" href="#/forgotPassword">Forgot Password?</a>
        </div>
    </div>
</div>