<br>
<div class="container">

    <uib-tabset active="activeJustified" justified="true">
        <uib-tab index="0" heading="Profile">
            <div class=" col-sm-12 well">
                <div class="col-xs-4">

                    <img class="img-responsive" src="/img/profile.jpg">
                    <button class="btn btn-primary" style="width: 100%" ng-click="profileEdit(data[0])">Edit Profile
                    </button>
                </div>
                <div class="col-xs-8">
                    <form class="form-horizontal" role="form">
                        <div class="form-group has-feedback">
                            <label class="col-lg-6 control-label pull-left" style="text-align:left;">First Name:</label>
                            <label class="col-lg-6 control-label pull-left" style="text-align:left;">Last Name:</label>

                            <div class="col-lg-6">
                                <input type="text"
                                       class="form-control"
                                       placeholder="First Name"
                                       name="First Name"
                                       ng-model="data[0].first_name">
                            </div>
                            <div class="col-lg-6">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Last Name"
                                       name="Last Name"
                                       ng-model="data[0].last_name">
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <label class="col-lg-6 control-label pull-left" style="text-align:left;">Gender:</label>
                            <label class="col-lg-6 control-label pull-left" style="text-align:left;">Weight:</label>

                            <div class="col-lg-6">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Gender"
                                       name="Gender"
                                       ng-model="data[0].gender">
                            </div>
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Weight"
                                           name="Weight"
                                           ng-model="data[0].weight">
                                    <span class="input-group-addon" id="sizing-addon2">KG</span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <label class="col-lg-12 control-label pull-left" style="text-align:left;">Bio:</label>

                            <div class="col-lg-12">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Gender"
                                       name="Gender"
                                       ng-model="data[0].bio">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </uib-tab>
        <uib-tab index="1" heading="Recent Workouts">
            <div class="col-sm-12">
                <div class="col-sm-12"
                     style="background-color: #ffffff;padding:0;text-align: center">
                    <h4 ng-show="!recent_workouts">No Workouts have been completed :-(</h4>

                    <div>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="workout in recent_workouts">
                                <th>{{workout.workoutName}}</th>
                                <th>{{workout.start_date | date: 'MMMM dd'}}</th>
                                <th>{{workout.start_date | date: 'HH:mm'}}</th>
                                <th>{{workout.end_date | date: 'HH:mm'}}</th>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </uib-tab>
        <uib-tab index="2" heading="Weight Tracker">
            <div class="col-sm-12">
                <div class="col-sm-12" style="background-color: #16a085;color: white;padding: 5px;text-align: center">
                    Weight Tracker
                </div>
                <div class="col-sm-12"
                     style="background-color: #ffffff;padding: 5px;text-align: center">

                    <canvas id="line" class="chart chart-line" chart-data="chartdata"
                            chart-labels="labels" chart-legend="true" chart-series="series"
                            chart-click="onClick" chart-colours="">
                    </canvas>
                    <h1 ng-hide="chartdata">No Data</h1>
                </div>
            </div>
        </uib-tab>
    </uib-tabset>

</div>

</div>