<div class="container">
<div class="col-lg-12">
    <form ng-submit="register()"
          style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Email"
                   ng-model="user.email">
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control"
                   placeholder="Password"
                   ng-model="user.password">
        </div>

        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</div>
    </div>